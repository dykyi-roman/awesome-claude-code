{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "if [[ \"$ACC_TOOL_FILE_PATH\" == *.php ]]; then php -l \"$ACC_TOOL_FILE_PATH\"; fi"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(composer validate:*)",
      "Bash(make:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git rev-parse:*)",
      "Bash(ls:*)",
      "Bash(tree:*)",
      "WebSearch"
    ],
    "deny": []
  }
}
